// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  name      String?
  password  String?  // Optional for Google users
  googleId  String?  @unique
  provider  String   @default("credentials") // credentials, google
  role      String   @default("affiliate") // affiliate, super admin
  emailVerified DateTime?
  verificationCode String? // 6-digit OTP
  verificationExpiry DateTime?
  views     Int      @default(0)
  avatar    String?  // URL to uploaded file
  bio       String?
  instagram String?
  youtube   String?
  spotify   String?
  tiktok    String?
  email     String?
  themePreset String @default("classic") // classic, cotton-candy, midnight-neon
  buttonStyle String @default("rounded") // rounded, box, soft, brutalist
  customBackground String? // URL to uploaded custom background
  enableAmbient Boolean @default(true) // Toggle for floating effects
  links     Link[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Link {
  id        Int      @id @default(autoincrement())
  title     String
  url       String
  platform  String?
  category  String?
  image     String?
  price     String?  // Optional price display like in SS
  clicks    Int      @default(0)
  order     Int      @default(0)
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
